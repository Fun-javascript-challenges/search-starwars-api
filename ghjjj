function searchItems(apiCarr){
    let searcher = document.getElementById("search-input");
    let apiCards = document.getElementById('card')
    /* selecting all the elements in the apiCardsFilm container */
    let elements = apiCards.querySelectorAll("*");
    
    console.log(elements)
    
    searcher.addEventListener("keydown", function(e){
        let searchWord = searcher.value
        elements.forEach(element => {
           let content =  element.textContent
            if (e.key === "Enter") {
                e.preventDefault()
                if(content.indexOf(searchWord) > -1){
                    element.style.display = ""
                }
                else {
                    element.style.display = "none"
                }
            }
        });
        console.log(searcher.value)
    })
}